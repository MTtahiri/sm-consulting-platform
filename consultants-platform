<body>
    <div class="container">
        <header>
            <h1>Consultants IT Experts</h1>
            <p class="subtitle">D√©couvrez nos profils hautement qualifi√©s pour vos projets</p>
        </header>

        <div class="filters">
            <select class="filter-select" id="location-filter">
                <option value="">üìç Toutes les localisations</option>
                <option value="Paris">Paris</option>
                <option value="Lyon">Lyon</option>
                <option value="Remote">Remote</option>
            </select>
            
            <select class="filter-select" id="skills-filter">
                <option value="">üõ†Ô∏è Toutes les comp√©tences</option>
                <option value="JavaScript">JavaScript</option>
                <option value="React">React</option>
                <option value="Node.js">Node.js</option>
                <option value="AWS">AWS</option>
                <option value="Docker">Docker</option>
                <option value="Python">Python</option>
            </select>
            
            <select class="filter-select" id="availability-filter">
                <option value="">üìÖ Toutes disponibilit√©s</option>
                <option value="Imm√©diate">Imm√©diate</option>
                <option value="2 semaines">2 semaines</option>
                <option value="1 mois">1 mois</option>
            </select>
        </div>

        <div id="consultants-container">
            <div class="loading">Chargement des consultants...</div>
        </div>
    </div>

    <script>
        // Configuration GitHub - √Ä MODIFIER AVEC VOS INFOS
        const GITHUB_CONFIG = {
            username: 'MTtahiri', // Remplacez par votre nom d'utilisateur GitHub
            repo: 'consultants-data',        // Remplacez si votre d√©p√¥t a un autre nom
            filepath: 'consultants.json'     // Remplacez si votre fichier a un autre nom
        };

        let allConsultants = [];

        // Charger les donn√©es depuis GitHub
        async function loadConsultants() {
            const container = document.getElementById('consultants-container');
            
            try {
                container.innerHTML = '<div class="loading">üì° Connexion √† GitHub...</div>';
                
                const response = await fetch(
                    `https://api.github.com/repos/${GITHUB_CONFIG.username}/${GITHUB_CONFIG.repo}/contents/${GITHUB_CONFIG.filepath}`
                );
                
                if (!response.ok) {
                    throw new Error(`Erreur GitHub ${response.status}: ${response.statusText}`);
                }
                
                const data = await response.json();
                const content = JSON.parse(atob(data.content));
                allConsultants = content.consultants;
                
                renderConsultants(allConsultants);
                setupFilters();
                
            } catch (error) {
                console.error('Erreur:', error);
                container.innerHTML = `
                    <div class="error">
                        <h3>‚ùå Erreur de chargement</h3>
                        <p>Impossible de charger les donn√©es depuis GitHub.</p>
                        <p><small>${error.message}</small></p>
                        <button onclick="loadConsultants()" style="margin-top: 15px; padding: 10px 20px;">üîÑ R√©essayer</button>
                    </div>
                `;
            }
        }

        // Afficher les consultants
        function renderConsultants(consultants) {
            const container = document.getElementById('consultants-container');
            
            if (!consultants || consultants.length === 0) {
                container.innerHTML = '<div class="error">Aucun consultant trouv√©.</div>';
                return;
            }
            
            container.innerHTML = consultants.map(consultant => `
                <div class="consultant-card">
                    <h2 class="consultant-name">${consultant.name}</h2>
                    <p class="consultant-position">${consultant.position} ‚Ä¢ ${consultant.experience}</p>
                    
                    <div class="consultant-details">
                        <div class="detail-item">
                            <span>üìç</span> ${consultant.location}
                        </div>
                        <div class="detail-item">
                            <span>üí∞</span> ${consultant.rate}
                        </div>
                        <div class="detail-item">
                            <span>üìÖ</span> Disponibilit√©: ${consultant.availability}
                        </div>
                    </div>
                    
                    <p>${consultant.description}</p>
                    
                    <div class="consultant-skills">
                        ${consultant.skills.map(skill => `
                            <span class="skill-tag">${skill}</span>
                        `).join('')}
                    </div>
                    
                    <button class="contact-button" onclick="contactConsultant('${consultant.email}')">
                        üìß Contacter ${consultant.name}
                    </button>
                </div>
            `).join('');
        }

        // Configurer les filtres
        function setupFilters() {
            const filters = ['location', 'skills', 'availability'];
            
            filters.forEach(filterType => {
                const filter = document.getElementById(`${filterType}-filter`);
                filter.addEventListener('change', applyFilters);
            });
        }

        // Appliquer les filtres
        function applyFilters() {
            const locationFilter = document.getElementById('location-filter').value;
            const skillsFilter = document.getElementById('skills-filter').value;
            const availabilityFilter = document.getElementById('availability-filter').value;
            
            let filtered = allConsultants;
            
            if (locationFilter) {
                filtered = filtered.filter(c => c.location === locationFilter);
            }
            
            if (skillsFilter) {
                filtered = filtered.filter(c => c.skills.includes(skillsFilter));
            }
            
            if (availabilityFilter) {
                filtered = filtered.filter(c => c.availability === availabilityFilter);
            }
            
            renderConsultants(filtered);
        }

        // Contacter un consultant
        function contactConsultant(email) {
            window.location.href = `mailto:${email}?subject=Contact%20depuis%20la%20plateforme%20consultants&body=Bonjour,%0A%0AJ'ai%20vu%20votre%20profil%20sur%20la%20plateforme%20et%20je%20suis%20int√©ress√©(e)%20par%20vos%20comp√©tences.`;
        }

        // Charger au d√©marrage
        document.addEventListener('DOMContentLoaded', loadConsultants);
    </script>
</body>
